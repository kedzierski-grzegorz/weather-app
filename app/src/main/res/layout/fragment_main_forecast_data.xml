<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainForecastDataFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main_data_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_city"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Warsaw"
            android:textAlignment="center"
            android:textSize="42sp"/>
        <TextView
            android:id="@+id/txt_coor"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lat: 12.423 lon: -29.3234"
            android:textAlignment="center"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/txt_time"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2020-01-01 14:40"
            android:textAlignment="center"
            android:textSize="32sp"/>
        <ImageView
            android:id="@+id/img_icon"
            android:src="@drawable/_01d"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_desc"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sunny"
            android:textAlignment="center"
            android:textSize="28sp"/>
        <TextView
            android:id="@+id/txt_temp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30 C"
            android:textAlignment="center"
            android:textSize="32sp"/>
        <TextView
            android:id="@+id/txt_press"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1023 Hp"
            android:textAlignment="center"
            android:textSize="32sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>